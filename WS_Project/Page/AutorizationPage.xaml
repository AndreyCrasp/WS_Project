<Page x:Class="WS_Project.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WS_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <StackPanel VerticalAlignment="Center">
        <TextBlock FontSize="25" Text="Логин" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="login" FontSize="25" VerticalAlignment="Center" Margin="0 10 " HorizontalAlignment="Center" Text="inspector" Width="250"/>
        <TextBlock FontSize="25" Text="Пароль" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="pass" FontSize="25"  VerticalAlignment="Center" Margin="0 10 " HorizontalAlignment="Center" Text="inspector" Width="250"/>
        <Button x:Name="btlog" Content="Войти " FontSize="25" Width="250" Margin="0 10 " Click="Button_Click"></Button>

    </StackPanel>
</Page>
